rule "HL - Employment Stability Salaried"
    salience 850
    when
        $app : LoanApplication(productCode == "HL")
        $applicant : Applicant(applicationId == $app.id, applicantType == "PRIMARY")
        $emp : EmploymentDetails(
            applicantId == $applicant.id,
            employmentType == EmploymentType.SALARIED,
            totalExperienceYears < 2 || yearsInCurrentJob < 1
        )
        $result : EligibilityResult(applicationId == $app.id)
