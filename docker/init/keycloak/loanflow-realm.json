{
  "id": "loanflow",
  "realm": "loanflow",
  "displayName": "LoanFlow",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "resetPasswordAllowed": true,
  "bruteForceProtected": true,
  "failureFactor": 5,
  "accessTokenLifespan": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,

  "roles": {
    "realm": [
      { "name": "CUSTOMER", "description": "Loan applicant - view own applications and documents" },
      { "name": "LOAN_OFFICER", "description": "Create and manage loan applications" },
      { "name": "SENIOR_LOAN_OFFICER", "description": "Senior loan officer with elevated limits", "composite": true, "composites": { "realm": ["LOAN_OFFICER"] } },
      { "name": "UNDERWRITER", "description": "Review and approve/decline loans" },
      { "name": "SENIOR_UNDERWRITER", "description": "Senior underwriter with higher limits", "composite": true, "composites": { "realm": ["UNDERWRITER"] } },
      { "name": "CREDIT_ANALYST", "description": "Credit analysis and risk assessment" },
      { "name": "COMPLIANCE_OFFICER", "description": "Regulatory compliance monitoring" },
      { "name": "BRANCH_MANAGER", "description": "Branch operations management", "composite": true, "composites": { "realm": ["LOAN_OFFICER", "UNDERWRITER"] } },
      { "name": "ADMIN", "description": "System administrator", "composite": true, "composites": { "realm": ["BRANCH_MANAGER", "COMPLIANCE_OFFICER"] } },
      { "name": "AUDITOR", "description": "Read-only audit access" }
    ]
  },

  "clients": [
    {
      "clientId": "loanflow-backend",
      "name": "LoanFlow Backend",
      "enabled": true,
      "bearerOnly": true,
      "publicClient": false,
      "serviceAccountsEnabled": true,
      "protocol": "openid-connect"
    },
    {
      "clientId": "loanflow-web",
      "name": "LoanFlow Web App",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "protocol": "openid-connect",
      "rootUrl": "http://localhost:4200",
      "redirectUris": ["http://localhost:4200/*", "http://localhost:8080/*"],
      "webOrigins": ["http://localhost:4200", "http://localhost:8080", "+"],
      "attributes": { "pkce.code.challenge.method": "S256" }
    },
    {
      "clientId": "loanflow-swagger",
      "name": "LoanFlow Swagger",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "protocol": "openid-connect",
      "redirectUris": ["http://localhost:8080/*"],
      "webOrigins": ["*"]
    }
  ],

  "users": [
